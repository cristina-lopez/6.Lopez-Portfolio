extends layout.pug

block content

  article.portfolio-intro
    h1 My Portfolio
    p This portfolio contains ... Replace with a description for your portfolio, what this project is, it's purpose, what it's supposed to accomplish, etc
  article.portfolio-project-thumbs
    .projects-box.box.grid
      each project in projects 
        .cell 
          a(href=`/project/${project.id}`)
            img.thumbnail(src=`${project.images_url[0]}`, alt='Screenshot of Project')
            h5= `${project.project_name}`